{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName": {
      "value": "myVnet"
    },
    "subnetName": {
      "value": "mySubnet"
    },
    "location": {
      "value": "westeurope"
    },
    "nicName": {
      "value": "myNic"
    },
    "createPublicIP": {
      "value": true
    },
    "publicIPName": {
      "value": "myNic-publicIP"
    },
    "publicIPSKU": {
      "value": "Basic"
    },
    "publicIPAllocationMethod": {
      "value": "Dynamic"
    },
    "privateIPAllocationMethod": {
      "value": "Dynamic"
    },
    "infraResourceGroup": {
      "value": "myInfraResourceGroup"
    },
    "ipConfigName": {
      "value": "ipconfig"
    },
    "tags": {
      "value": {
        "environment": "dev",
        "owner": "your-name"
      }
    }
  }
}